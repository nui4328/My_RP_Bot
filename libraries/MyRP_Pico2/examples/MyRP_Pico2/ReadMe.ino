
void readme()
  {

    Motor(10 ,10);
    Motor(-10 ,-10);
    Motor(0 ,0);

    
    //--------------------------------->> เซนเซอร์
    //---->> เซนเซอร์หน้า
    read_sensorA(0)                 ;  //ค่าที่อ่านได้จากเซนเซอร์  ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา
    md_sensorA(0)                   ;  //ค่ากลางระหว่างพื้นขาวกับดำ  ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา
    sensorMinA[0]                  ;   //ค่าต่ำสุดได้จากการคาริเบรท ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา
    sensorMaxA[0]                  ;   //ค่ามากสุดได้จากการคาริเบรท ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา

    //---->> เซนเซอร์หลัง
    read_sensorB(0)                 ;  //ค่าที่อ่านได้จากเซนเซอร์  ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา
    md_sensorB(0)                   ;  //ค่ากลางระหว่างพื้นขาวกับดำ  ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา
    sensorMinB[0]                  ;   //ค่าต่ำสุดได้จากการคาริเบรท ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา
    sensorMaxB[0]                  ;   //ค่ามากสุดได้จากการคาริเบรท ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา

    //---->> เซนเซอร์กลาง
    
    analogRead(46)                 ;  //ค่าที่อ่านได้จากเซนเซอร์  ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา
    md_sensorC(0)                  ;
    sensorMinC[0]                 ;                
    sensorMaxC[0]                 ; 

    analogRead(47)                 ;  //ค่าที่อ่านได้จากเซนเซอร์  ค่าในวงเล็บ 0-7 เรียงจากซ้ายไปขวา
    md_sensorC(1)                  ;
    sensorMinC[1]                 ;                
    sensorMaxC[1]                 ; 

    //  คำสั่งเดินตามเส้น นับทีละแยก

    //---------------------------------------------------------หมุซ้ายเข้าไป วาง  หมุนขวาออกมา
    place_left_in(30, 45, 30) ;           // place_left_in(ความเร็ว, อิงศา, ค่าเบรค)
    
    place_left_out(30, 45, 30) ;          // place_left_out(ความเร็ว, อิงศา, ค่าเบรค)

    //---------------------------------------------------------หมุนขวาเข้าไป วาง  หมุนขวาออกมา
    place_right_in(30, 45, 30) ;           // place_right_in(ความเร็ว, อิงศา, ค่าเบรค)
    
    place_right_out(30, 45, 30) ;          // place_right_out(ความเร็ว, อิงศา, ค่าเบรค)

    //-------->>  
    do{Motor(15 ,15);delayMicroseconds(50);}while(read_sensorA(3) > md_sensorA(3)); 
      delay(50);
      Motor(-20 ,-20);delay(30);
      Motor(-1 ,-1);delay(30);
    //------------------------------->> ไจโร
    resetAngles();  // รีเซตไจโรให้เป็น 0
    my.gyro('z')      ;// อ่่านค่าไจโร

    //  คำสั่งเดินตามเส้น นับทีละแยก


     // เดินเข้าหาเส้น เลื่อกเซนเซอร์ เพื่อตรวจสอบว่าเป็นแยก  โดย สามารถเลือกได้เป็น "a0", "a7" และ "a07"   "a07"เพื่อเช็คข้างหน้าเป็น 4 แยก
    fline(50, 50, 0.45, "a0", 'f', 'p', 50, "a6", 0);      //
    fline(50, 50, 0.45, "a0", 'f', 's', 50, "a6", 40);     //
    fline(30, 30, 0.45, "a0", 'f', 'l', 80, "a2", 1);      //
    fline(30, 30, 0.45, "a0", 'f', 'r', 80, "a5", 1);      //

    fline(50, 50, 0.45, "a0", 'c', 'p', 50, "a6", 0);      //
    fline(50, 50, 0.45, "a0", 'c', 's', 50, "a6", 40);      //
    fline(30, 30, 0.45, "a0", 'c', 'l', 50, "a2", 40);      //
    fline(30, 30, 0.45, "a0", 'c', 'r', 50, "a5", 40);      //
    
    // เดินเข้าหาเส้น
    fline(50, 50, 0.45, 0, 'f', 'p', 50, "a6", 0);      //
    fline(50, 50, 0.45, 0, 'f', 's', 50, "a6", 40);      //
    fline(30, 30, 0.45, 0, 'f', 'l', 80, "a2", 1);      //
    fline(30, 30, 0.45, 0, 'f', 'r', 80, "a5", 1);      //

    fline(50, 50, 0.45, 0, 'c', 'p', 50, "a6", 0);      //
    fline(50, 50, 0.45, 0, 'c', 's', 50, "a6", 40);      //
    fline(30, 30, 0.45, 0, 'c', 'l', 50, "a2", 40);      //
    fline(30, 30, 0.45, 0, 'c', 'r', 50, "a5", 40);      //

    // เดินเป็นระยะทาง
    fline(50, 50, 0.45, 20, 'f', 'p', 50, "a6", 0);      //
    fline(50, 50, 0.45, 20, 'f', 's', 50, "a6", 40);      //
    fline(30, 30, 0.45, 20, 'f', 'l', 80, "a2", 1);      //
    fline(30, 30, 0.45, 20, 'f', 'r', 80, "a5", 1);      //

    fline(50, 50, 0.45, 20, 'c', 'p', 50, "a6", 0);      //
    fline(50, 50, 0.45, 20, 'c', 's', 50, "a6", 40);      //
    fline(30, 30, 0.45, 20, 'c', 'l', 50, "a2", 40);      //
    fline(30, 30, 0.45, 20, 'c', 'r', 50, "a5", 40);      //

    fline(50, 50, 0.45, 20, 'n', 'p', 50, "a6", 0);      //
    fline(50, 50, 0.45, 20, 'n', 's', 50, "a6", 40);      //
    fline(30, 30, 0.45, 20, 'n', 'l', 50, "a2", 40);      //
    fline(30, 30, 0.45, 20, 'n', 'r', 50, "a5", 40);      //


    // หุ่นยนต์ไม่เดิน ต้องการหมุนตัว
    fline(0, 0, 0.45, 0, 'f', 'l', 80, "a2", 1);      //
    fline(0, 0, 0.45, 0, 'f', 'r', 80, "a5", 1);      //

    fline(0, 0, 0.45, 0, 'c', 'l', 50, "a2", 40);      //
    fline(0, 0, 0.45, 0, 'c', 'r', 50, "a5", 40);      //

    fline(0, 0, 0.45, 0, 'n', 'l', 50, "a2", 40);      //
    fline(0, 0, 0.45, 0, 'n', 'r', 50, "a5", 40);      //

   //----------------------------------------------------------------->> ถอยหลัง
    // เดินเข้าหาเส้น
    bline(50, 50, 0.45, 0, 'f', 'p', 50, "a6", 0);      //
    bline(50, 50, 0.45, 0, 'f', 's', 50, "a6", 40);      //
    bline(30, 30, 0.45, 0, 'f', 'l', 80, "a2", 1);      //
    bline(30, 30, 0.45, 0, 'f', 'r', 80, "a5", 1);      //

    bline(50, 50, 0.45, 0, 'c', 'p', 50, "a6", 0);      //
    bline(50, 50, 0.45, 0, 'c', 's', 50, "a6", 40);      //
    bline(30, 30, 0.45, 0, 'c', 'l', 50, "a2", 40);      //
    bline(30, 30, 0.45, 0, 'c', 'r', 50, "a5", 40);      //

    // เดินเป็นระยะทาง
    bline(50, 50, 0.45, 20, 'f', 'p', 50, "a6", 0);      //
    bline(50, 50, 0.45, 20, 'f', 's', 50, "a6", 40);      //
    bline(30, 30, 0.45, 20, 'f', 'l', 80, "a2", 1);      //
    bline(30, 30, 0.45, 20, 'f', 'r', 80, "a5", 1);      //

    bline(50, 50, 0.45, 20, 'c', 'p', 50, "a6", 0);      //
    bline(50, 50, 0.45, 20, 'c', 's', 50, "a6", 40);      //
    bline(30, 30, 0.45, 20, 'c', 'l', 50, "a2", 40);      //
    bline(30, 30, 0.45, 20, 'c', 'r', 50, "a5", 40);      //

    bline(50, 50, 0.45, 20, 'n', 'p', 50, "a6", 0);      //
    bline(50, 50, 0.45, 20, 'n', 's', 50, "a6", 40);      //
    bline(30, 30, 0.45, 20, 'n', 'l', 50, "a2", 40);      //
    bline(30, 30, 0.45, 20, 'n', 'r', 50, "a5", 40);      //


    // หุ่นยนต์ไม่เดิน ต้องการหมุนตัว
    bline(0, 0, 0.45, 0, 'f', 'l', 80, "a2", 1);      //
    bline(0, 0, 0.45, 0, 'f', 'r', 80, "a5", 1);      //

    bline(0, 0, 0.45, 0, 'c', 'l', 50, "a2", 40);      //
    bline(0, 0, 0.45, 0, 'c', 'r', 50, "a5", 40);      //

    bline(0, 0, 0.45, 0, 'n', 'l', 50, "a2", 40);      //
    bline(0, 0, 0.45, 0, 'n', 'r', 50, "a5", 40);      //

    //---------------------------------------------------------------------------->>>

    fw_gyro(30, 30, 1.25, 10, "a0", 's', 10) ;     //  fw_gyro(ความเร็ว, ความเร็ว, kp, ระยะทาง, ตัวที่เลือกให้เจอเส้น, 's'= หยุด/'p'= ข้ามเส้น  , ค่าเบรค) ;    
    bw_gyro(30, 30, 1.25, 10, "a0", 's', 10) ;

    fw_gyro(30, 30, 1.25, 10,  10) ;   //  fw_gyro(ความเร็ว, ความเร็ว, kp, ระยะทาง,  ค่าเบรค) ;    
    bw_gyro(30, 30, 1.25, 10,  10) ;

    //----------------------------------------------------------------------------->>
    arm_ready();  //--------->> แขนลง กางฝ่ามือออกเตรียมเข้าไปคีบ
    arm_open_down();   //--------->>  กางฝ่ามือออก  และเอาแขนลง
    arm_down_open();   //--------->>  เอาแขนลง  และ กางฝ่ามือออก  
    arm_open_up();    //--------->>  กางฝ่ามือออก  และยกแขนขึ้น
    arm_up_open();   //--------->>  เอาแขนขึ้น  และ กางฝ่ามือออก  
