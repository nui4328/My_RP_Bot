void read_me()
    {
       arm_Slide(400);  //----->>  เลื่อนแขนขึ้น หน่วงเวลา 400
       arm_Slide(-400);  //----->>  เลื่อนแขนลงหน่วงเวลา 400

      _servo(0, 90);     //----->แขนซ้ายชี้ไปข้างหน้า  
      _servo(0, 0);     //----->แขนซ้ายชี้ไปซ้าย 
      _servo(0, 180);     //----->แขนซ้ายชี้ไปขวา
       
      _servo(1, 90);     //----->แขนซ้ายชี้ไปข้างหน้า  
      _servo(1, 0);     //----->แขนซ้ายชี้ไปซ้าย 
      _servo(1, 180);     //----->แขนซ้ายชี้ไปขวา
      
      servo(27, servo_27_close);  //------>> มือจับด้านซ้าย หุบเข้า
      servo(28, servo_28_close);  //------>> มือจับด้านขวา หุบเข้า 

      servo(27, servo_27_close - 110);  //------>> มือจับด้านซ้าย กางออก
      servo(28, servo_28_close - 110);  //------>> มือจับด้านขวา กางออก 
      

      fw_distance(10, 10, 2700, 400);   //---->> 10,10คือความเร็ว, 2700คือค่าที่อ่านได้จากตัววัดระยะ,  400คือหน่วงเวลาในการเลื่อนแขนขึ้น

      fw(50, 50, 30, "line");        //----->> 50, 50คือความรเร็วม,  30คือระยะทางมีหน่วยเป็นเซนติเมตรม,  "line"คือ เคลื่อนเข้าหาเส้นเมื่อถึงระยะที่กำหนด 
      fw(50, 50, 30, "none_line");   //----->> 50, 50คือความรเร็วม,  30คือระยะทางมีหน่วยเป็นเซนติเมตรม,  "none_line"คือ ไม่เคลื่อนเข้าหาเส้นเมื่อถึงระยะที่กำหนด

      bw(50, 50, 30, "line");        //----->> เหมื่อนกับ fw_line แต่ ถ่อนหลัง
      bw(50, 50, 30, "none_line");
      
      //------------------------------------------------------------------->>
      fw(50, 50, 30, "line", 300);        //----->> 50, 50คือความรเร็วม,  30คือระยะทางมีหน่วยเป็นเซนติเมตรม,  "line"คือ เคลื่อนเข้าหาเส้นเมื่อถึงระยะที่กำหนด 
      fw(50, 50, 30, "none_line", 300);   //----->> 50, 50คือความรเร็วม,  30คือระยะทางมีหน่วยเป็นเซนติเมตรม,  "none_line"คือ ไม่เคลื่อนเข้าหาเส้นเมื่อถึงระยะที่กำหนด

      bw(50, 50, 30, "line", 300);        //----->> เหมื่อนกับ fw_line แต่ ถ่อนหลัง
      bw(50, 50, 30, "none_line", 300);
      
      //-----< 300 ต่อท้าย คือวิ่งไปด้วยเลื่อนแขนขึ้นหรือลง
      //------------------------------------------------------------------->>

      fw_bridge(50, 50, 30, "line");    //---->> ขึ้นสะพาน  เหมือนกับ fw_line
      fw_bridge(50, 50, 30, "none_line");
      
      fw_chopsticks (20, 20, 30, "line");  //---->> ขึ้นตะเกียบ  เหมือนกับ fw_line
      fw_chopsticks (20, 20, 30, "none_line");

      moveLR(70, 90);   //------>> หมุนตามเข็มนาฬิกา  50คือความเร็วในการหมุน  90คือองศาในการหมุน
      moveLR(70, -90);  //------>> หมุนทวนเข็มนาฬิกา
      
      moveLR(150, 70, -90);   //------>> หมุนตามเข็มนาฬิกา  150คือ เดินหน้าหรือถอยหลังออกมาจากเส้นเป็นระยที่กำหนดก่อนหมุน 50คือความเร็วในการหมุน  90คือองศาในการหมุน
      moveLR(150, 70, -90);    

      set_f(2);  
      set_b(2);
          
                                //--------->>> คำสั่งรอปุ่มกด
      bz(100);                        //--------->>> คำสั่งเปิดเสียง        
      Motor(30, 30);                  //--------->>> คำสั่งควบคุมการทำงานของมอเตอร์
      Motor(-30, -30); 
      
      mcp_f(0);                       //--------->>> คำสั่งแสดงค่าของ sensor แผงหน้าที่อ่านได้ ขณะนั้น mcp_f(0 - 7);
      md_mcp_f(0);                    //--------->>> คำสั่งแสดงค่ากลางของ sensor  md_mcp_f(0 - 7);
      max_mcp_f(0);                   //--------->>> คำสั่งแสดงค่าสูงสุดของ sensor  max_mcp_f(0 - 7);
      min_mcp_f(0);                   //--------->>> คำสั่งแสดงค่าต่ำสุดของ sensor  min_mcp_f(0 - 7);


         
    }
